@page
@model ShopDevelop.Identity.DuendeServer.Pages.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<environment names="Development">
    <link rel="stylesheet" href="~/css/Login/login.css" />
</environment>

<section class="register" id="register">
    <div class="container">
        <div class="register__inner">
            <form class="register-form" method="post">
                <input type="hidden" asp-for="model.ReturnUrl" />
                <h1 class="reg-title">Register</h1>

                <p class="reg-other-text-info">Create an account so you can start shopping.</p>

                <h4 class="reg-subtitle">BASIC INFORMATION</h4>
                <input asp-for="@Model.model.UserName" class="reg-input" class="login-input" type="text" placeholder="Login" id="login-input">
                <input asp-for="@Model.model.Password" class="reg-input" type="password" placeholder="Password" id="pass-input" class="pass-input">
                <input asp-for="@Model.model.ConfirmPassword" class="reg-input pa" type="password" placeholder="Repeat Password" id="pass-input" class="pass-input">

                <p class="reg-other-text">Already have an account?</p>
                <a class="reg-login__link" href="/Auth/Login">Log In</a>
                <br>
                <button class="btn-submit" type="submit">CREATE</button>
            </form>
        </div>
    </div>
</section>
